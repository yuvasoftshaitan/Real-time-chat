<div id="chatroom_container" >
    <div id="side_panel" >  
    <div id="room_container">
    <% if @single_room %>
      <div id="single_room">
        <center><h4> <%= @user&.email || @single_room.name %></h4></center>
        <%= turbo_stream_from @single_room %>

        <div id="messages" data-controller="scroll">
          <%= render @messages %>
        </div>
        <%= render partial: 'layouts/new_message_form' %>
      </div>
    <% end %>
    </div>
</div>
